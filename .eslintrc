{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
  },
  "ecmaVersion": 6,
  "sourceType": "module",
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "indent": [
      2,
      2,
      {"SwitchCase": 1}
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "globals": {
    "ReactElement": false
  }
}
